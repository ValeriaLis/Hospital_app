<p style="color: green"><%= notice %></p>

<h1 style="color: #AB82FF">Specialties</h1>

<div id="specialties">
  <%= form_with(url: specialties_path, method: :get) do |form| %>
    <%= form.text_field :query, placeholder: 'Search specialty'%>
    <%= form.submit 'Search' %>
  <% end %>
  <% @specialty.each do |specialty| %>
    <%= render specialty %>
    <p>
      <%= link_to "Show this specialty", specialty %>
    </p>
  <% end %>

  <%= will_paginate @specialty %>
</div>
<%= link_to "New specialty", new_specialty_path %>


<p>
  Sort by:
    <%= link_to 'Name (asc)', { sort_field: 'name', sort_direction: 'asc' } %>
    <%= link_to 'Name (desc)', { sort_field: 'name', sort_direction: 'desc' } %>
    <%= link_to 'Created at (asc)', { sort_field: 'created_at', sort_direction: 'asc' } %>
    <%= link_to 'Created at (desc)', { sort_field: 'created_at', sort_direction: 'desc' } %>
</p>
<p><%= link_to 'Main page', root_path %></p>
</body>

