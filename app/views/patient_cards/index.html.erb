<p style="color: green"><%= notice %></p>

<h1 style="color: #AB82FF">Patient cards</h1>

<div id="patient_cards">
  <%= form_with(url: patient_cards_path, method: :get) do |form| %>
    <%= form.text_field :query, placeholder: 'Search patient cards (by insurance_number)' %>
    <%= form.submit 'Search' %>
  <% end %>
  <% @patient_cards.each do |patient_card| %>
    <%= render patient_card %>
    <p>
      <%= link_to "Show this patient card", patient_card %>
    </p>
  <% end %>

  <%= will_paginate @patient_cards, renderer: WillPaginate::ActionView::LinkRenderer %>
</div>

<%= link_to "New patient card", new_patient_card_path %>

<p>
  Sort by:
  <%= link_to 'Created at (asc)', { sort_field: 'created_at', sort_direction: 'asc' } %>
  <%= link_to 'Created at (desc)', { sort_field: 'created_at', sort_direction: 'desc' } %>
</p>
<p><%= link_to 'Main page', root_path %></p>
</body>